<% provide(:title, 'new') %>

<div class="modal-dialog">
  <!-- モーダルコンテンツ：モーダルに表示させる内容-->
  <div class="modal-content">
    <!-- モーダルコンテンツのヘッダー部分-->
    <div class="modal-header">
      <h1 class="modal-title">拠点情報の追加</h1>
      <!-- &timesは「×ボタン」の表示-->
      <button type="button" class="close" data-dismiss="modal">&times;</button>
    </div>
    <div class="modal-body">
      <%= form_with(model:@base, local: true, method: :post) do |f| %>
      
        <%= f.label :"拠点番号", class: "label-new" %>
        <%= f.number_field :base_number, class: "form-control", min: 1, max: 50 %>
        
        <%= f.label :"拠点名", class: "label-new" %>
        <%= f.text_field :base_branch, class: "form-control" %>
        
        <%= f.label :"拠点種類", class: "label-new" %>
        <%= f.select :work_type, ["出勤", "リモート"], {include_blank: "選択してください。"}, class: "form-control" %>
        
        <div class="center">
          <%= f.submit "拠点の追加", class: "btn btn-primary btn-block btn-new" %>
        </div>
      <% end %>
    </div>
  </div>
</div>